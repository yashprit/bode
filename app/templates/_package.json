{
  "name": "<%= slugname %>",
  "version": "<%= props.version %>",
  "description": "<%= props.description %>",
  <%
  if (props.homepage) { %> "homepage": "<%= props.homepage %>",
    <%
  } %>
    "bugs": {
      "url": "<%= props.githubUsername %>/<%= slugname %>/issues"
  },
  "author": { <%
    if (props.authorUrl) { %> "url": "<%= props.authorUrl %>" <%
    } %> , <%
    if (props.authorName) { %> "name": "<%= props.authorName %>" <%
    } %> , <%
    if (props.authorEmail) { %> "email": "<%= props.authorEmail %>" <%
    } %>
  },
  "repository": {
    "type": "git",
    "url": "<%= repoUrl %>"
  },
  "license": "<%= props.license %>",
  "files": [ <%
    if (props.taskRunner === 'simple.js') { %>
        "index.js" <%
    } else { %>
        "lib/index.js" <%
    } %> <%
    if (props.cli) { %> ,
        "cli.js" <%
    } %>
  ],
  "keywords": [
    "<%= slugname %>" <%
    for (var i = 0; i < keywords.length; i++) { %> ,
        "<%= keywords[i] %>" <%
    } %>
  ],
  "dependencies": { <%
    if (props.cli) { %>
        "minimist": "^1.1.1" <%
    } %>
  },
  "devDependencies": { <%
    if (props.taskRunner === 'simple.js') { %>
        "mocha": "*" <%
    } %>
      <%
    if (props.taskRunner === 'Gruntfile.js') { %>
        "grunt-cli": "^0.1.13",
      "grunt-contrib-jshint": "^0.10.0",
      "grunt-contrib-watch": "^0.6.1",
      "load-grunt-tasks": "^1.0.0",
      "time-grunt": "^1.0.0" <%
      if (props.unit['node_unit']) { %> ,
          "grunt-contrib-nodeunit": "^0.4.1" <%
      } else if (props.unit['mocha_chai']) { %> ,
          "grunt-mocha-cli": "^1.11.0",
        "chai": "^2.1.0" <%
      } else if (props.unit['jasmine']) { %> ,
          "grunt-contrib-jasmine": "^0.8.2" <%
      }
    }
    if (props.taskRunner === 'gulpfile.js') { %>
        "gulp": "^3.8.11",
      "gulp-cli": "^0.1.5",
      "gulp-watch": "^4.1.1",
      "gulp-jshint": "^1.9.2" <%
      if (props.unit['node_unit']) { %> ,
          "gulp-nodeunit": "^0.0.5" <%
      } else if (props.unit['mocha_chai']) { %> ,
          "gulp-mocha": "^2.0.0",
        "chai": "^2.1.0" <%
      } else if (props.unit['jasmine']) { %> ,
          "gulp-jasmine": "^2.0.0" <%
      }
    } %> ,
      "jshint-stylish": "^1.0.0" <%
    if (props.browser) { %> ,
        "browserify": "^7.0.0" <%
    } %>
  },
  "scripts": { <%
    if (props.browser) { %> "browser": "browserify index.js > browser.js",
      <%
    } %>
      <%
    if (props.taskRunner === 'Gruntfile.js') { %> "test": "grunt test" <%
    } %>
      <%
    if (props.taskRunner === 'gulpfile.js') { %> "test": "gulp test" <%
    } %>
      <%
    if (props.taskRunner === 'simple.js') { %> "test": "mocha" <%
    } %>
  } <%
  if (props.cli) { %> ,
      "bin": {
        "<%= slugname %>": "cli.js"
    } <%
  } %>
}
